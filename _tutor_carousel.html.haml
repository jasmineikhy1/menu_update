#tutors.container-fluid.lingo-carousel
  .row
    .col-md-12
      #tutor-profiles.carousel.slide{:'data-ride' => 'carousel'}
        - tutors = %w(seth steve jackie travis)
        %ol.carousel-indicators
          - tutors.length.times do |i|
            %li{:'data-target' => '#tutor-profiles', :'data-slide-to' => i, class: (i == 0 ? 'active' : nil)}
        .carousel-inner{role: 'listbox'}
          - tutors.each_with_index do |tutor, i|
            .item{class: (i == 0 ? 'active' : nil)}
              .row
                .col-md-2.col-md-offset-2
                  = image_tag("shared/tutors/#{tutor}.png")
                .col-md-8
                  .tutor-description
                    %h3== Teacher #{tutor.capitalize}
                    %ul.points
                      - t("shared.tutors.#{tutor}.points").each do |caption|
                        %li= caption

        %a.left.carousel-control{href: '#tutor-profiles', role: 'button', :'data-slide' => 'prev'}
          %span.glyphicon.glyphicon-chevron-left{:'aria-hidden' => true}
          %span.sr-only Previous
        %a.right.carousel-control{href: '#tutor-profiles', role: 'button', :'data-slide' => 'next'}
          %span.glyphicon.glyphicon-chevron-right{:'aria-hidden' => true}
          %span.sr-only Next
